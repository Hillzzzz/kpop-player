generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Song {
  id        Int      @id @default(autoincrement())
  title     String
  artist    String
  album     String?
  year      Int?
  coverUrl  String?
  audioUrl  String
  createdAt DateTime @default(now())
}

